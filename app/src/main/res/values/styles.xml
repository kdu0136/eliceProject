<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- region Text Style -->
    <style name="Text.Base" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.NotoNormal" parent="Text.Base">
        <item name="android:fontFamily">@font/notosans_font</item>
        <item name="fontFamily">@font/notosans_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.NotoBold" parent="Text.Base">
        <item name="android:fontFamily">@font/notosans_font</item>
        <item name="fontFamily">@font/notosans_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- endregion -->

    <!-- region Button Style -->
    <style name="Button.SelectBottom" parent="Text.NotoBold">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rect_radius_10</item>
    </style>
    <!-- endregion -->

</resources>